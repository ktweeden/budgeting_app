<main>
  <h2>Spending towards budgets this month</h2>
  <h3>Main budget: &pound; <%= to_pounds(@main_budget['spent'])%> of &pound; <%= to_pounds(@main_budget['amount'])%> spent</h3>
  <table>
    <tr>
      <th>Tag</th>
      <th>Budget</th>
      <th>Amount spent</th>
      <th>Amount remaining</th>
    </tr>
    <% @tag_budgets.each do |budget| %>
    <tr>
      <td><%= budget['tag'] %></td>
      <td>&pound; <%= to_pounds(budget['amount']) %></td>
      <td>&pound; <%= to_pounds(budget['spent']) %></td>
      <td>&pound; <%= to_pounds(budget['remaining'])%></td>
    </tr>
    <% end %>
  </table>
</main>
